<div class="row">
<% camp_item.camp_item_comments.each do |camp_item_comment| %>
  <div class="col-3 mb-3">
    <div id="comment-user-image">
      <%= image_tag camp_item_comment.customer.get_profile_image(500,500), class: "comment-show"  %><br>
    </div>
    <i class="fas fa-user" style="color: #638C0B;"></i> <%= camp_item_comment.customer.last_name %><%= camp_item_comment.customer.first_name %><br>
    <%= camp_item_comment.created_at.strftime('%Y/%m/%d') %>
    <% if camp_item_comment.customer == current_customer %>
      <%= link_to "削除", camp_item_camp_item_comment_path(camp_item_comment.camp_item, camp_item_comment), method: :delete, remote: true, class: "btn" %><br>
    <% end %>
    <% if admin_signed_in? %>
     <%= link_to "詳細へ", admin_camp_item_camp_item_comment_path(camp_item_comment.id), class: "btn"  %><br>
    <% end %>
  </div>
  <div class="col-9 mb-3 user-comment-field">
    <div class="user-comment"><%= simple_format(camp_item_comment.comment) %></div>
  </div>
<% end %>
</div>