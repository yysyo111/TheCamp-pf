<!--キャンプ場情報表示-->
<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="text-center">キャンプ場詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <%= image_tag @camp.get_camp_image(350, 350) %>
    </div>
    <div class="col-6">
      <table>
        <tbody>
          <tr>
            <td>キャンプ場名:</td>
            <td><%= @camp.name %></td>
          </tr>
          <tr>
            <td>電話番号:</td>
            <td><%= @camp.phone_number %></td>
          </tr>
          <tr>
            <td>エリア:</td>
            <td><%= @camp.area_i18n %></td>
          </tr>
          <tr>
            <td>住所:</td>
            <td><%= @camp.address %></td>
          </tr>
          <tr id="camp_<%= @camp.id %>">
            <!--いいね機能非同期通信-->
            <td class="favorite-btn">
              <%= render 'public/camp_favorites/favorite-btn', camp: @camp %>
            </td>
          </tr>
          <tr>
            <% if @camp.get_camp_review_avg != -1 %>
            <!--星の平均-->
            <td>口コミ平均:<%#= @camp.get_camp_review_avg %></td>
            <td>
              <div id="star_rate_<%= @camp_comment.id %>" class="form-group"></div>
              <script>
              // ターボリンクはいらない
                // $('#rate_<%#= @camp.get_camp_review_avg %>').empty();
                $('#star_rate_<%= @camp_comment.id %>').raty({
                  size: 20,
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn : '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  half: true,
                  readOnly: true,
                  score: <%= @camp.get_camp_review_avg %>
                });
              </script>
            </td>
            <% end %>
            <!--星の平均-->
          </tr>
        </tbody>
      </table>
      <%= link_to "戻る", camps_path, class: "btn btn-info" %>
    </div>
  </div>
</div>

<!--地図表示-->
<div class="container d-flex justify-content-center">
  <div class="row">
    <div class="col-12">
      <h3 class="text-center">Google Map</h3>
      <div id="map"></div>  <!--#mapの表示-->
    </div>
  </div>
</div>

<!--コメント表示-->
<div class="container">
  <h4 class="text-center my-3">キャンプ場口コミ一覧(コメント件数：<%= @camp.camp_comments.count %>)</p></h4>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @camp_comments.each do |camp_comment| %>
      <div class="col">
        <div class="card h-100">
          <div id="profile_image">
            <%= image_tag camp_comment.customer.get_profile_image(250,250), class: "comment-img p-2" %>  <!--アイテム画像-->
          </div>
          <div class="card-body">
            <div id="rate_<%= camp_comment.id %>" class="form-group"></div>
            <script>
            // $(document).on('turbolinks:load', function() {
            // ターボリンクはいらない
              $('#rate_<%= camp_comment.id %>').empty();
              $('#rate_<%= camp_comment.id %>').raty({
                size: 20,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                half: true,
                readOnly: true,
                score: <%= camp_comment.rate %>
              })
            // });
            </script>
            コメント者：<%= camp_comment.customer.last_name %><%= camp_comment.customer.first_name %><br>
            タイトル：<%= camp_comment.title %><br>
            コメント内容：<%= camp_comment.comment %><br>
            投稿日：<%= camp_comment.created_at.strftime('%Y/%m/%d') %><br>
            <% if camp_comment.customer == current_customer %>
              <%= link_to "コメント削除", camp_camp_comment_path(camp_comment.camp, camp_comment), method: :delete, class: "btn btn-info" %><br>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="container d-flex justify-content-center">
  <%= link_to "コメント投稿", new_camp_camp_comment_path(@camp, @camp_comment), class: "btn btn-info" %>
</div>
<!--コメント表示-->

<div class="container">
  <div class="row">
    <div class="col-12 d-flex justify-content-center my-2">
      <!--ページネーション-->
      <%= paginate @camp_comments, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>

<script type="text/javascript">
  function initMap() {
// #latitude,longitudeから位置を特定
    var test ={lat: <%= @camp.latitude %>, lng: <%= @camp.longitude %>};
    var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 15,
              center: test
              });
    var transitLayer = new google.maps.TransitLayer();
    transitLayer.setMap(map);

    var contentString = '住所：<%= @camp.address %>';
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });

//  #Map上の指定した位置にピンを挿して表示する, // マーカーを立てる場所の緯度経度を指定
    var marker = new google.maps.Marker({
                  position: test,
                  map: map,
                  title: contentString
                 });

     marker.addListener('click', function() {
       infowindow.open(map, marker);
     });
  }
</script>

<script async defer src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%=ENV['GOOGLE_MAP_API']%>&callback=initMap">
</script>

<style type="text/css">
  #map { height: 300px;
         width: 1000px;}
</style>

