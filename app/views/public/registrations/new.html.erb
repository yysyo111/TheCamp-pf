<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="field row">
    <div class="col-3"><%= f.label :名前 %></div>
    <div class="col-1"><%= f.label :（姓） %></div>
    <div class="col-3"><%= f.text_field :last_name, autofocus: true, placeholder: "令和", size: 25 %></div>
    <div class="col-1"><%= f.label :（名） %></div>
    <div class="col-3"><%= f.text_field :first_name, placeholder: "道子", size: 25 %></div>
  </div>

  <div class="field row">
    <div class="col-3"><%= f.label :フリガナ %></div>
    <div class="col-1"><%= f.label :（セイ） %></div>
    <div class="col-3"><%= f.text_field :last_name_kana, placeholder: "レイワ", size: 25 %></div>
    <div class="col-1"><%= f.label :（メイ） %></div>
    <div class="col-3"><%= f.text_field :first_name_kana, placeholder: "ミチコ", size: 25 %></div>
  </div>

  <div class="field row">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field row">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field row">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions row">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
