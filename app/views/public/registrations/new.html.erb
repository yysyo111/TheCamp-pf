<div class="container d-flex justify-content-center my-4">
  <div class="card card-container ">
    <img id="login_img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
    <p id="profile-name" class="profile-name-card"></p>
    <div class="row">
      <div class="col-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="row field">
            <div class="col-12 d-flex justify-content-center"><%= f.label :名前 %><%= f.label :（姓） %></div>
            <div class="col-12 d-flex justify-content-center"><%= f.text_field :last_name, autofocus: true, placeholder: "田中", size: 25 %></div>
            <div class="col-12 d-flex justify-content-center"><%= f.label :名前 %><%= f.label :（名） %></div>
            <div class="col-12 d-flex justify-content-center"><%= f.text_field :first_name, placeholder: "太朗", size: 25 %></div>
          </div>

          <div class="row field">
            <div class="col-12 d-flex justify-content-center"><%= f.label :フリガナ %><%= f.label :（セイ） %></div>
            <div class="col-12 d-flex justify-content-center"><%= f.text_field :last_name_kana, placeholder: "タナカ", size: 25 %></div>
            <div class="col-12 d-flex justify-content-center"><%= f.label :フリガナ %><%= f.label :（メイ） %></div>
            <div class="col-12 d-flex justify-content-center"><%= f.text_field :first_name_kana, placeholder: "タロウ", size: 25 %></div>
          </div>

          <div class="row field">
            <div class="col-12 d-flex justify-content-center"><%= f.label :メールアドレス %></div>
            <div class="col-12 d-flex justify-content-center"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "test@example.com", size: 25  %></div>
          </div>

          <div class="row field">
            <div class="col-12 d-flex justify-content-center">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
            </div>
            <div class="col-12 d-flex justify-content-center"><%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力してください", size: 25 %></div>
          </div>

          <div class="row field">
            <div class="col-12 d-flex justify-content-center"><%= f.label :パスワード %></div>
            <div class="col-12 d-flex justify-content-center"><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを入力してください", size: 25 %></div>
          </div>

          <div class="actions d-flex justify-content-center">
            <%= f.submit "新規登録", class: "btn btn-info" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row d-flex justify-content-center">
      <div>
        <h6 class="pass">既に登録済みの方こちらからログインしてください<%= render "public/shared/links" %></h6>
      </div>
    </div>
  </div><!-- /card-container -->
</div><!-- /container -->
