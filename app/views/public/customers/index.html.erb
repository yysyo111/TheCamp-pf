<h5 class="text-center my-3">会員一覧</h5>
<div class="container">
  <div class="row px-5">
    <table class="table">
      <thead>
        <tr>
          <th class="col-2">プロフィール</th>
          <!--<th>会員ID</th>-->
          <th class="col-2"></th>
          <th class="col-8"></th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <% if customer.is_deleted == false %>
        <tr>
          <td class="col-2"><%= image_tag customer.get_profile_image(70,70) %></td>
          <!--<td><%#= customer.id %></td>-->
          <td class="col-2 align-middle"><%= customer.last_name %><%= customer.first_name %></td>
          <% if customer.email != "guest@example.com" %>
            <% if current_customer.id == customer.id %>
              <td><%= link_to "詳細", customer_path(customer.id), class: "btn btn-info my-3" %></td>
            <% end %>
          <% end %>
          <td class="col-8"></td>
        </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 d-flex justify-content-center my-2">
      <!--ページネーション-->
      <%= paginate @customers, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>




