<div class="container d-flex justify-content-center my-3">
  <%= render "layouts/errors", obj: @camp_item %>
</div>
<h5 class="text-center my-3">キャンプアイテム編集</h5>
<div class="container d-flex justify-content-center my-3">
  <div class="row">
    <div class="col-12">
      <%= form_with model: @camp_item do |f| %>
        <h6>アイテム画像</h6>
          <%= f.file_field :camp_item_image, accept: "image/*" %>
        <h6>キャンプアイテム</h6>
          <%= f.text_field :name %>
        <h6>感想</h6>
          <%= f.text_area :impression %><br>
        <%= f.submit "更新", class: "btn btn-info mb-3" %>
      <% end %>
    </div>
    <div class="col-12 ">
      <%= link_to "戻る", camp_item_path(@camp_item.id), class: "btn btn-info" %>
    </div>
  </div>
</div>
